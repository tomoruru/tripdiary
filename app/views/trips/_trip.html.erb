<% @trips.each do |trip| %>
 <div class = "col-lg-3">
  <div><%= trip.user.name %> <span class="text-muted">posted at <%= trip.created_at %></span></div>
    <div><%= link_to trip.where, trip %></div>
  <div class = "btn-toolbar" >
    <div class = "btn-group btn-group-justified">
      <% if current_user == trip.user %>
        <%= link_to "delete" ,trip, method: :delete, data: { confirm: "You sure?" } ,class: 'btn btn-danger btn-sm-center' %>
      <% end %> 
      <% if logged_in? %>
        <%= render "favorites/favorite_button" , trip: trip %>
      <% end %>
    </div>
  </div>
 </div>
<% end %>