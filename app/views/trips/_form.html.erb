<%= form_with(model: trip, local: true) do |f| %>
<div class = 'row'>
  <div class = 'col-lg-5'>
    <div class = "row">
      
      <div class = "form-group">
        <%= f.text_area :where, class: 'form-control' , size: "100x7" ,placeholder: "where?" %>
      </div>
      
      <div class = "form-group">
        <%= f.text_area :transpotation, class: 'form-control' , size: "100x7",placeholder: "transpotation" %>
      </div>
      
      <div class = "form-group">
        <%= f.text_area :hotel, class: 'form-control' , size: "100x7",placeholder: "hotel"%>
      </div>
      
      <div><%= f.submit '投稿', class: 'btn btn-primary btn-lg'%></div>
      
    </div>
  </div>
  
  
  <div class = 'col-lg-7'>  
    <div class = "row">
      
      <div class = "form-group">
        <%= f.text_area :what_did, class: 'form-control' , size: "150x20",placeholder: "what_did?"%>
      </div>
      
      <div class = "mx-auto">
        <div><%= f.label :image %><br></div>
        <div><%= f.file_field :image %></div>
        <div><%= f.hidden_field :image_cache %></div>
      </div>  
      
    </div>
  </div>
</div>
<% end %>