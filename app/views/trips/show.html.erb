<div class = "row">
  <div class = 'col-lg-6 '>
    <div class="card" >
    
      <div class="card-header">
        <i class="fas fa-globe-asia fa-lg"></i>
      </div>
      <div class="card-body">
        <p><%= @trip.where%></p>
      </div>
    
      <div class="card-header">
        <i class="fas fa-plane-departure fa-lg"></i>
      </div>
      <div class="card-body">
        <p><%= @trip.transpotation %></p>
      </div>
    
      <div class="card-header">
        <i class="fas fa-hotel fa-lg "></i>
      </div>
      <div class="card-body">
        <p><%= @trip.hotel %></p>
      </div>
      
      <div class="card-header">
          <i class="far fa-images fa-lg"></i>
      </div>
      <div class="card-body">
          <p><%= image_tag @trip.image.url ,:size =>"500x400" if @trip.image? %></p>
      </div>
      
    </div>
  </div>
  

    <div class = 'col-lg-6'>  
