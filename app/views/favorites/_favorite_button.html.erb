<% if current_user.favorite?(trip) %>
  <%= form_with(model: current_user.favorites.find_by(trip_id: trip.id),local:true,method: :delete) do |f| %>
    <%= hidden_field_tag :trip_id, trip.id %>
    <%= f.submit 'Unfavorite',class: 'btn btn-danger btn-sm-center' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local:true) do |f| %>
     <%= hidden_field_tag :trip_id, trip.id %>
     <%= f.submit 'Favorite',class: 'btn btn-primary btn-sm-center' %>
  <% end %>
<% end %>